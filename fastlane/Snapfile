# Snapfile for MirrorSmokerStopper - iPhone & Apple Watch App with iOS 26
devices([
  "iPhone 16 Pro Max",  # 6.9" display - Required for iOS 26 features
  "iPhone 16 Pro",      # 6.3" display - Required  
  "iPhone 16",          # Standard size - Good coverage
  "Apple Watch Series 10 (46mm)"  # Apple Watch screenshots
])

languages([
  "en-US",  # English first
  "es-ES", 
  "fr-FR",
  "de-DE",
  "it"
])

scheme("MirrorSmokerStopper")
test_target_name("MirrorSmokerStopperUITests")
project("./MirrorSmokerStopper.xcodeproj")
output_directory("./fastlane/screenshots")
clear_previous_screenshots(true)
override_status_bar(true)
localize_simulator(true)
dark_mode(false)  # Will be handled in test for both modes